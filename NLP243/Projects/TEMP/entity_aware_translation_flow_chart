// Entity-Aware Machine Translation Workflow
digraph {
	A [label="Load English Text"]
	B [label="Identify Entities using SpaCy (en_core_web_sm)"]
	C [label="Mark Entities in English Text"]
	D [label="Load Translation Model (mBART)"]
	E [label="Translate Marked Text from English to Chinese"]
	F [label="Replace Markers with Original Entities in Chinese Text"]
	G [label="Final Output: Chinese Text with Preserved Entities"]
	A -> B [label="English Text"]
	B -> C [label="Entities Identified"]
	C -> D [label="Marked English Text"]
	D -> E [label="Translation Model Loaded"]
	E -> F [label="Translated Text with Entity Markers"]
	F -> G [label="Replace Markers with Entities"]
}
